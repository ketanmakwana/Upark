<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.upark"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.upark.Splash"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.upark.HomeActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.upark.ReservationActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.upark.NewReservationActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.upark.PaymentHistoryActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.upark.MessageActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.upark.SignUp"
            android:label="@string/title_activity_sign_up" />
        <activity
            android:name="com.upark.Spots"
            android:label="@string/title_activity_spots" />
        <activity
            android:name="com.upark.ReservationModification"
            android:label="@string/title_activity_reservation_modification" />
        <activity
            android:name="com.upark.Payment"
            android:label="@string/title_activity_payment" />
        <activity
            android:name="com.upark.ReservationCancellation"
            android:label="@string/title_activity_reservation_cancellation" />
        <activity
            android:name="com.upark.PaymentConfirmation"
            android:label="@string/title_activity_payment_confirmation" />
        <activity
            android:name="com.upark.LoginActivity"
            android:label="@string/title_activity_splash" />
        <activity
            android:name="com.upark.Packages"
            android:label="@string/title_activity_packages" />
    </application>

</manifest>