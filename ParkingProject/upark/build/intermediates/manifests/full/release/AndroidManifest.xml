<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.upark"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.upark.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.upark.HomeActivity"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.upark.ReservationActivity"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.upark.NewReservationActivity"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.upark.PaymentHistoryActivity"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.upark.MessageActivity"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider600019030130252"
            android:exported="true" />

        <activity
            android:name="com.upark.SignUp"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name="com.upark.Spots"
            android:label="@string/title_activity_spots" >
        </activity>
        <activity
            android:name="com.upark.ReservationModification"
            android:label="@string/title_activity_reservation_modification" >
        </activity>
        <activity
            android:name="com.upark.Payment"
            android:label="@string/title_activity_payment" >
        </activity>
        <activity
            android:name="com.upark.ReservationCancellation"
            android:label="@string/title_activity_reservation_cancellation" >
        </activity>
    </application>

</manifest>